﻿@using System.Security.Claims
@model IEnumerable<ResultTeacherViewModel>

<style>
	.result-container {
		border: 1px solid #ccc;
		border-radius: 5px;
		padding: 10px;
		margin-bottom: 15px;
		box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
		background-color: white;
	}

		.result-container h3 {
			margin-top: 0;
			margin-bottom: 5px;
			color: #333;
		}

		.result-container p {
			margin: 0;
		}

	.result-rating {
		font-size: 16px;
		margin-bottom: 5px;
	}
</style>


@if (Model.Any())
{
	@foreach (var student in Model)
	{
		<div class="result-container">
			<div class="d-flex justify-content-between align-items-start">
				<p class="result-rating">@student.StudentName</p>
				
					<div class="d-flex align-items-center">
					<a style="margin-right: 10px" asp-area="" asp-controller="Result" asp-action="Add" asp-route-information="@student.GetStudentInfromation()"
			        asp-route-id="@Convert.ToInt32(ViewData["courseId"])" asp-route-studentId="@student.StudentId" class="btn custom-button-course-color">Result</a>
					</div>	
			</div>
		</div>
	}
}
else
{
	<div class="container d-flex justify-content-center align-items-center vh-100">
		<div class="text-center" style="margin-bottom: 200px;">
			<h1>There are not any participants this course!</h1>
		</div>
	</div>
}



