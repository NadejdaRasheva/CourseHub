@model ResultViewModel
<style>
	.result-container {
		border: 1px solid #ccc;
		border-radius: 5px;
		padding: 10px;
		margin-bottom: 15px;
		box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
		background-color: white;
	}

		.result-container h3 {
			margin-top: 0;
			margin-bottom: 5px;
			color: #333;
		}

		.result-container p {
			margin: 0;
		}

	.result-grade {
		font-size: 16px;
		margin-bottom: 5px;
	}
</style>

@{
	ViewData["Title"] = "Course Result";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />


<div class="result-container">
	<h2>@Model.CourseName</h2>
	<div class="fw-bold d-flex justify-content-between align-items-start">
		<p class="result-grade">Grade: @Model.Grade</p>	
	</div>
	<div class="mb-2">
		<p><b>Feedback from teacher:</b> @Model.Feedback</p>
	</div>
</div>
